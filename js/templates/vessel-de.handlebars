<div class="oseam-modal modal hide fade" id="vesseledit" tabindex="-1" role="dialog" aria-labelledby="x" aria-hidden="true">
    <div class="modal-header">
        <button type="button" id="close" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="vesselTitle">Fahrzeugkonfiguration {{name}}</h3>
    </div>
    <div class="modal-body">
        <div id="current_step"></div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" id="oseam-cancel" aria-hidden="true">Abbrechen</button>
        <button class="btn" id="prev_step_button" aria-hidden="true">Zurück</button>
        <button class="btn" id="next_step_button" aria-hidden="true">Vorwärts</button>
        <button class="btn btn-primary" id="oseam-save" data-dismiss="modal">Speichern und Schließen</button>
    </div>
</div>
