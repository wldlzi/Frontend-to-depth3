        <div class="control-group">
            <p><label class="tableft50a">E-Mail*</label></p>
            <div class="input-append">
                <input type="text" id="user" name="user_name" placeholder="jane@doe.com" value="{{user_name}}"/>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Vorname</label></p>
            <div class="input-append">
                <input type="text" id="forename" name="forename" placeholder="Jane" value="{{forename}}"/>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Nachname</label></p>
            <div class="input-append">
                <input type="text" id="surname" name="surname" placeholder="Doe" value="{{surname}}"/>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Organisation</label></p>
            <div class="input-append">
                <input type="text" id="organisation" name="organisation" placeholder="Hydrographic Institute" value="{{organisation}}"/>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Sie dürfen mich per E-Mail kontaktieren</label></p>
            <div class="input-append">
                <input type="checkbox" id="acceptedEmailContact" name="acceptedEmailContact" checked="{{acceptedEmailContact}}"/>&nbsp;
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Land</label></p>
            <div class="input-append">
                <select name="country" id="countries" class="form-control bfh-countries" data-country="US"></select>
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Korrespondenz Sprache</label></p>
            <div class="input-append">
                <select name="language" id="languages" class="form-control bfh-languages" data-language="en"></select>            
            </div>
        </div>

        <div class="control-group">
            <p><label class="tableft50a">Telefon</label></p>
            <div class="input-append">
        <!--    <input name="phone" id="phones" type="text" class="form-control bfh-phone" data-country="countries"/>  -->
        <!--    <input name="phone" id="phones" type="text" class="form-control bfh-phone" data-country="countries"  placeholder="z.B. 0049 221 8853"/>  -->
                <input name="phone" id="phones" type="text" value="{{phone}}"  placeholder="z.B. 0049 221 8853-xxx"/>
            </div>
        </div>
        
        <div class="control-group">
            <br>
            <button class="btn btn-primary" id="profile-update">Profile Änderung übernehmen</button>
            <br>
        </div>
